<div class="row">

  <form id="search-form" action="/search" method="post">
    <div class="small-2 medium-1 medium-offset-3 columns">
      <div class="switch">
        <input name="searchForLnr" id="searchForLnr" type="checkbox">
        <label for="searchForLnr">L nummer</label>
      </div>
    </div>

    <div class="small-10 medium-4 column">
      <input id="q" type="text" size="6" name="item_number" min="1" max="999999" placeholder="Søg">
      <a id="q_emty">x</a>
      <input type="submit" class="button expand" style="display:none">
    </div>
    
    <div id="notification_space" class="small-12 medium-4 column"></div>
  </form>

</div>
<div class="row">
  <div class="small-centered medium-4 column" style="text-align:center;">
    <img src="images/ajax-loader.gif" id="loadproof"></img>
  </div>
</div>
<div class="row">
  <div id="no-search" class="small-12 column panel callout">
    <p>Søg efter et produkt</p>
  </div>
  <div id="no-results" class="small-12 column panel callout">
    <p>Ingen varer matcher din søgning</p>
  </div>
</div>

<ul id="results" class="small-block-grid-2 medium-block-grid-3 large-block-grid-3">
  <div id="variant-prompt" class="small-12 column panel">
      <div class="row">
        <div class="small-12 medium-3 columns">
          <img id="product-image">
        </div>
        <div class="small-12 medium-9 columns info">
          <h2 id="description"></h2>
          <p><b>Vare nr:</b> <span id="item-num"></span></p>
          <p><b>Leverandør vare nr:</b> <span id="l-num"></span></p>
          <p><b>Pris:</b> <span id="price"></span>,-</p>
        </div>
      </div>
      <hr >
      <ul id="variants" class="small-block-grid-2 medium-block-grid-4 large-block-grid-5">
        <li><a href="#" class="button large expand">Grøn</a></li>
        <li><a href="#" class="button large expand">Blå</a></li>
        <li><a href="#" class="button large expand">Mørkelilla</a></li>
        <li><a href="#" class="button large expand">Lyserød</a></li>
        <li><a href="#" class="button large expand">Gennemsigtig</a></li>
        <li><a href="#" class="button large expand">Gul</a></li>
        <li><a href="#" class="button large expand">Sort</a></li>
        <li><a href="#" class="button large expand">Grim</a></li>
        <li><a href="#" class="button large expand">Stribet</a></li>
        <li><a href="#" class="button large expand">Hipster hvid</a></li>
      </ul>
  </div>
</ul>

<div id="print-modal" class="reveal-modal medium" data-reveal aria-labelledby="Print label" aria-hidden="true" role="dialog">
  <form id="print-form" action="/print" method="post">
    <div class="row">
      <div class="medium-2 columns">
        <div class="switch tiny radius">
          <input id="edit-switch" type="checkbox">
          <label for="edit-switch"></label>
        </div> 
      </div>
      <div class="medium-8 columns">
        <input id="description" type="text" name="description" readonly="true" placeholder="Navn">
      </div>
      <div class="medium-2 columns"></div>
    </div>


    <div class="row_left">
      <div class="row">
        <div class="row collapse prefix-radius">
          <div class="small-4 columns">
            <span class="prefix">Nr.</span>
          </div>
          <div class="small-8 columns">
            <input id="item-number" type="text" name="item_number" readonly="true" placeholder="Varenummer">
          </div>
        </div>
      </div>

      <div class="row">
        <div class="row collapse prefix-radius">
          <div class="small-4 columns">
            <span class="prefix">Pris</span>
          </div>
          <div class="small-8 columns">
            <input id="price" type="text" name="price" disabled="true" placeholder="Pris">
          </div>
        </div>
      </div>

      <div class="row">
        <div class="row collapse prefix-radius">
          <div class="small-4 columns">
            <span class="prefix">Variant</span>
          </div>
          <div class="small-8 columns">
            <input id="variant" type="text" name="variant" readonly="true">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="row collapse prefix-radius">
          <div class="small-4 columns">
            <span class="prefix">L Nr.</span>
          </div>
          <div class="small-8 columns">
            <input id="lnr" type="text" name="lnr" readonly="true">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="row collapse prefix-radius">
          <div class="small-4 columns">
            <span class="prefix">Antal</span>
          </div>
          <div class="small-8 columns">
            <input id="antal" type="number" name="amount" min="1" max="100">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="row collapse prefix-radius">
          <div class="small-4 columns">
            <span class="prefix">Type</span>
          </div>
          <div class="small-8 columns">
            <select id="barcode-type" name="barcode_type">
              <%@barcode_types.each do |barcode_type|%>
                <option value='<%= barcode_type %>'><%= barcode_type%></option>
              <%end%>
            </select>
          </div>
        </div>
      </div>
    </div>

    <div class="row_right">
      <div class="row">
        <div class="large-12">
          <div class="row collapse prefix-radius">
            <div class="small-4 columns">
              <span class="prefix">Stregkode</span>
            </div>
            <div class="small-8 columns">
              <input id="barcode-number" type="text" name="barcode_number" readonly="false" placeholder="Stregkode">
            </div>
          </div>
        </div>
        <div class="large-12">
          <img id="barcode">
        </div>
        <div class="large-12">
          <img id="image" src="" alt="Billede" />
        </div>
      </div>
    </div>


    <div class="row">
      <div class="small-12 columns">
        <input type="submit" value="Print label" class="button expand">
      </div>
    </div>
  </form>

  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>



